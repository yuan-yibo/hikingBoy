/**app.wxss**/
page {
  background: linear-gradient(135deg, #FFF5F7 0%, #FFE8F0 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica', 'Arial', sans-serif;
  min-height: 100vh;
}

/* 通用按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #FF6B9D 0%, #FF8FB3 100%);
  color: white;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.3);
  transition: all 0.3s;
}

.btn-primary:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.3);
}

/* 通用卡片样式 */
.card {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  margin: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.1);
  transition: all 0.3s;
}

.card-hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 48rpx rgba(255, 107, 157, 0.15);
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #FFE8F0 0%, #FFF0F5 100%);
  color: #FF6B9D;
  border-radius: 24rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
