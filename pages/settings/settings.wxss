/* pages/settings/settings.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF5F7 0%, #FFE8F0 100%);
  padding: 32rpx;
}

/* 区块标题 */
.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.title-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 主题切换 */
.theme-section {
  margin-bottom: 48rpx;
  animation: slideUp 0.6s ease-out;
}

.theme-selector {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.theme-item {
  position: relative;
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
  overflow: hidden;
}

.theme-item:active {
  transform: scale(0.95);
}

.theme-item.active {
  transform: scale(1.05);
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.2);
}

.theme-item.active::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border: 4rpx solid white;
  border-radius: 24rpx;
  pointer-events: none;
}

.theme-name {
  font-size: 30rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.theme-check {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #27AE60;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 关于 */
.about-section {
  animation: slideUp 0.8s ease-out;
}

.about-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.about-item {
  padding: 24rpx 0;
  border-bottom: 2rpx solid #F5F5F5;
}

.about-item:last-child {
  border-bottom: none;
}

.about-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.about-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.about-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 动画 */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
