/* pages/add/add.wxss */
.container {
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: 120rpx;
}

.form-container {
  animation: slideUp 0.5s ease-out;
}

/* 表单项 */
.form-item {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.1);
}

.label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 输入框 */
.input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #333;
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: block;
}

.textarea {
  width: 100%;
  font-size: 30rpx;
  color: #333;
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.textarea {
  min-height: 200rpx;
}

.placeholder {
  color: #CCC;
}

/* 选择器 */
.picker {
  width: 100%;
}

.picker-value {
  font-size: 30rpx;
  color: #333;
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 24rpx;
}

/* 天气选项 */
.weather-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.weather-option {
  flex: 0 0 calc(33.333% - 11rpx);
  background: #F8F9FA;
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  transition: all 0.3s;
  border: 3rpx solid transparent;
}

.weather-option.active {
  background: linear-gradient(135deg, #FFE8F0 0%, #FFF0F5 100%);
  border-color: #FF6B9D;
  transform: scale(1.05);
}

.weather-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 8rpx;
}

.weather-text {
  font-size: 24rpx;
  color: #666;
}

.weather-option.active .weather-text {
  color: #FF6B9D;
  font-weight: bold;
}

/* 照片上传 */
.photo-upload-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.photo-item, .photo-add {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  position: relative;
}

.photo-item {
  overflow: hidden;
}

.photo {
  width: 100%;
  height: 100%;
}

.photo-delete {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 48rpx;
  height: 48rpx;
  background: #FF6B9D;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.3);
}

.photo-add {
  background: linear-gradient(135deg, #FFE8F0 0%, #FFF0F5 100%);
  border: 3rpx dashed #FF6B9D;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.photo-add:active {
  transform: scale(0.95);
}

.add-icon {
  font-size: 64rpx;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 24rpx;
  color: #FF6B9D;
}

/* 字数统计 */
.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 按钮 */
.btn-container {
  margin-top: 48rpx;
}

.btn-save {
  width: 100%;
  background: linear-gradient(135deg, #FF6B9D 0%, #FF8FB3 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  padding: 32rpx;
  box-shadow: 0 12rpx 48rpx rgba(255, 107, 157, 0.3);
  border: none;
  transition: all 0.3s;
}

.btn-save:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.3);
}

/* 动画 */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
