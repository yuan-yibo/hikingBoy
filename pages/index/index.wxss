/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头部区域 */
.header {
  padding: 40rpx 24rpx 24rpx;
}

.welcome-card {
  background: linear-gradient(135deg, #FF6B9D 0%, #FF8FB3 100%);
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 12rpx 48rpx rgba(255, 107, 157, 0.3);
  animation: slideDown 0.5s ease-out;
}

.welcome-text {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 12rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 记录列表 */
.records-container {
  padding: 0 24rpx;
}

.record-card {
  background: white;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.1);
  position: relative;
  transition: all 0.3s;
}

.record-card.fade-in {
  animation: fadeIn 0.5s ease-out;
}

/* 照片区域 */
.photo-area {
  width: 100%;
  height: 400rpx;
  position: relative;
  overflow: hidden;
}

.photo {
  width: 100%;
  height: 100%;
}

.no-photo {
  background: linear-gradient(135deg, #FFE8F0 0%, #FFF0F5 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-photo-icon {
  font-size: 120rpx;
  opacity: 0.5;
}

.photo-count {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  backdrop-filter: blur(10rpx);
}

/* 内容区域 */
.content-area {
  padding: 32rpx;
}

.mountain-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.date-time {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.date-time .icon {
  margin-right: 8rpx;
}

.distance {
  margin-left: 24rpx;
}

.duration {
  margin-left: 24rpx;
}

.weather {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.weather .icon {
  margin-right: 8rpx;
}

.note-preview {
  font-size: 28rpx;
  color: #999;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 12rpx;
}

/* 操作按钮 */
.action-btns {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  display: flex;
  gap: 12rpx;
}

.edit-btn, .delete-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s;
}

.edit-btn:active, .delete-btn:active {
  transform: scale(0.9);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #BBB;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF6B9D 0%, #FF8FB3 100%);
  box-shadow: 0 12rpx 48rpx rgba(255, 107, 157, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  animation: bounce 2s infinite;
}

.fab:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 48rpx;
  color: white;
  font-weight: bold;
}

/* 动画 */
@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-12rpx);
  }
}
